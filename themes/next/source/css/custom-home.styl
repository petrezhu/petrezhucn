// .brand 样式：无背景，黑色字体, 靠左
.brand {
  background: transparent !important;
  color: #000 !important;
  padding-left: 2px;
  padding-top: 2px;
} 

// 项目经验区块flex布局
.projects-grid
  display: flex
  flex-wrap: wrap
  gap: 4px

.project-card
  background: $header-bg
  border-radius: 9px
  box-shadow: 0 2px 8px rgba(0,0,0,0.08)
  padding: 1rem
  margin: 0.6rem
  flex-basis: 25%
  max-width: 25%
  transition: flex-basis 0.3s, max-width 0.3s, box-shadow 0.3s
  transform-origin: top
  z-index: 1
  .btn
    font-size: 0.4em
    margin-top: 10px
  .project-thumb {
    position: relative
    overflow: visible
  }
  .project-thumb img
    /* 恢复倒映效果 */
    -webkit-box-reflect: below 0.2em linear-gradient(transparent, rgba(0,0,0,0.15))
    /* 适中的发光边缘 */
    filter: drop-shadow(0 0 4px #fff) drop-shadow(0 0 8px #2196f3)
    position: relative
    z-index: 1
    &::after
      content: ''
      position: absolute
      left: 0
      top: 100%
      width: 100%
      height: 20%
      background: linear-gradient(225deg, rgba(0,0,0,0.18) 0%, transparent 80%)
      transform: skewX(-45deg) scaleY(-1)
      opacity: 0.7
      pointer-events: none
      z-index: 0

.project-card:hover
    transform: translateY(-6px) scale(1.05)
    box-shadow: 0 6px 24px rgba(0,0,0,0.18)

@media (max-width: 900px)
  .project-card
    flex-basis: 30%
    max-width: 30% 

// 头像
img.avatar-img {
  width: 60px
  height: 60px
}

.about-row
  display: flex
  align-items: center
  gap: 24px
  margin-top: 16px
  flex-direction: row

.about-desc
  font-size: 1.1em
  color: $text-secondary
  flex: 1

.about-avatar
  display: flex
  align-items: center
  justify-content: center
  margin-bottom: 20px

.avatar-img
  width: 80px
  height: 80px
  border-radius: 50%
  object-fit: cover
  box-shadow: 0 2px 8px rgba(0,0,0,0.10)
  border: 2px solid #fff

@media (max-width: 600px)
  .about-row
    flex-direction: column
    align-items: flex-start
    gap: 12px
  .about-avatar
    justify-content: flex-start

@media (max-width: 900px)
  .hero-section
    flex-direction: column
    gap: 16px
    align-items: stretch
  .hero-left
    width: 100%
    height: 80vw;
    min-height: 160px
    max-height: none
    margin-right: 0
    margin-bottom: 12px
  .hero-right
    width: 100%
    margin: 0
  .webgl-demo
    margin-top: 5px
    width: 100%
    height: 38vh
    min-height: 160px
    max-height: 50vh
    margin-top: 16px

