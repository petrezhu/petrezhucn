// 主色与强调色
$main-bg = #404040
$header-bg = #2D3748
$accent = #FFA500
$text-light = #fff
$text-secondary = #A0AEC0

.custom-header, .custom-footer
  background: $header-bg
  color: $text-light

.header-nav .nav-item
  color: $text-light
  margin-left: 2rem
  &:hover
    color: $accent

main {
    background: $main-bg;
}

.contact-popup
  background: #222
  color: $text-light
  box-shadow: 0 2px 8px rgba(0,0,0,0.2)
  border-radius: 8px
  padding: 1rem
  position: absolute
  top: 2.5rem
  right: 0
  display: none
.contact-dropdown:hover .contact-popup
  display: block

// hero-section 两侧留白
.hero-section
  display: flex
  width: 100%
  box-sizing: border-box
  background: $main-bg
  padding-left: 15px
  padding-right: 15px
  gap: 15px

.hero-title
  font-size: 1.5rem
  font-weight: bold
  color: $accent

.hero-intro {
    width: 350px;
}

.btn
  border-radius: 6px
  padding: 0.6em 1.5em
  font-weight: 600
  margin-right: 1em
  &.btn-primary
    background: $accent
    color: #222
    &:hover
      background: lighten($accent, 10%)
  &.btn-secondary
    background: #232946
    color: $accent
    &:hover
      background: $accent
      color: #232946

// 博客卡片
.blog-card
  background: $header-bg
  border-radius: 12px
  box-shadow: 0 2px 8px rgba(0,0,0,0.08)
  padding: 1.5rem
  margin: 1rem
  transition: transform 0.2s
  &:hover
    transform: translateY(-6px) scale(1.03)
    box-shadow: 0 6px 24px rgba(0,0,0,0.18)

.skill-bar-bg
  background: #444
  border-radius: 6px
  width: 100%
  height: 10px
  margin: 0.5em 0
.skill-bar
  background: $accent
  height: 100%
  border-radius: 6px

